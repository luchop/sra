		</div>
		
	<?php endwhile; ?>

	<div class="navigation">
		<div class="alignleft"><?php next_posts_link('&laquo; Entradas anteriores') ?></div>
		<div class="alignright"><?php previous_posts_link('Entradas recientes &raquo;') ?></div>
	</div>

<?php else : ?>

