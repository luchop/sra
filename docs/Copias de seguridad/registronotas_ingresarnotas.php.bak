//Funcion para calcular NOTA final
function promedio($n1,$n2)
{
    if (($n1+$n2)==0)
        return(0);
    else
    {  if($n1==0)
            return($n2);
        else
        {   if ($n2==0)   return ($n1);
            else        return (round(($n1+$n2)/2,0));
        }
    }
}

