					<?php } elseif (!('open' == $post-> comment_status) && !('open' == $post->ping_status)) {
						// Neither Comments, nor Pings are open ?>
						Comentarios y pings estan cerrados.

					<?php } edit_post_link('Edit this entry.','',''); ?>
		</div>
	</div>
	

<?php comments_template(); ?>

<?php endwhile; else: ?>
	<div class="error_msg">
		<h1>Error 404</h1>
		<h3>Epa! Usted encontro una pagina que no existe. Haga clic <a href="<?php echo get_option('home'); ?>/">aqui</a> para retornar a la pagina principal.</h3>
	</div>
<?php endif; ?>

